<div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4>Error!</h4>
    @if (!ViewData.ModelState.IsValid)
    {
        <strong>Resuelva las siguientes inconsistencias</strong><br />
        @Html.ValidationSummary("", new { })
    }
    else if (ViewBag.Message != null)
    {
        <label>@ViewBag.Message</label>
    }
    else
    {
        <label>Algo salió mal y no estamos seguros qué, por favor inténtelo más tarde o contácte al administrador del sistema.</label>
    }
</div>