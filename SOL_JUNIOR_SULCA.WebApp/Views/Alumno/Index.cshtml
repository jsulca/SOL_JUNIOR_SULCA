@model List<Alumno>
@{
    ViewBag.Title = "Alumnos";

}

<h2>Lista de Alumnos</h2>

<div class="row">
    <div class="col-md-12 text-center">
        <a href="/Alumno/Nuevo" class="btn btn-warning">Nuevo</a>
        <hr />
    </div>

    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-condensed table-bordered table-hover">
                <thead>
                    <tr class="bg-primary text-center">
                    </tr>
                    <tr class="bg-primary text-center">
                        <th width="80"></th>
                        <th width="40">#</th>
                        <th width="120">CÓDIGO</th>
                        <th>NOMBRES</th>
                        <th>APELLIDOS</th>
                        <th width="100">ESTADO</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        int i = 0;
                        foreach (Alumno item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <a href="/Alumno/Editar/@item.Id" class="text-warning">EDITAR</a>
                                </td>
                                <td class="text-right">@(++i)</td>
                                <td class="text-center">@item.Codigo</td>
                                <td>@item.Nombre</td>
                                <td>@item.Apellido</td>
                                <td class="text-center">@item.Estado</td>
                            </tr>

                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">NO EXISTE REGISTROS</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
